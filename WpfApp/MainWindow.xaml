<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="MAIN" Height="400" Width="800">
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button x:Name="myBtn" Content="Load Image" Grid.ColumnSpan="2" Margin="55,112,0,0" Height="150" VerticalAlignment="Top" HorizontalAlignment="Left" Width="150" Click="myBtn_Click"/>
        <Border BorderBrush="Black" BorderThickness="1" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="340" Margin="266,0,0,0" VerticalAlignment="Center" Width="501" Background="#FFFFC9C9">
            <Image x:Name="image1" HorizontalAlignment="Left" Height="337" VerticalAlignment="Top" Width="502" Margin="1,-1,0,0" MouseMove="image1_MouseMove"/>
        </Border>
        <TextBox x:Name="tbPos" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="55,289,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150" Height="38"/>

    </Grid>
</Window>
