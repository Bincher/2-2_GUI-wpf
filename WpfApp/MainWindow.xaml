<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="MAIN" Height="462" Width="800" Loaded="Window_Loaded">
    <Grid Margin="0,0,0,-6">
        <Grid.RowDefinitions>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Margin="2" Grid.Row="0" Content="0" FontSize="60" HorizontalAlignment="center" VerticalAlignment="center" x:Name ="lbCnt"/>
        <Button Margin="2" Grid.Row="1" Content="start" Height="50" Click="Button_Click"/>
        <Button Margin="2" Grid.Row="2" Content="stop" Height="50" Click="Button_Click_1"/>
        <Button Margin="2" Grid.Row="3" Content="reset" Height="50" Click="Button_Click_2"/>
    </Grid>
</Window>
